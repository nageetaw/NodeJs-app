doctype html 
html
    head 
        title Product 
    body 
        h1 Product 
        include header.pug 
        table(style='width:50%', border='1')
            tbody 
                each product in products 
                    tr 
                        td #{product.name}  
                        td #{product.price}
                        td 
                            img(src='/images/'+ product.image  alt='product image' style='width:100px') 
                        td 
                            a(href="/product/api/deleteProduct/"+ product._id , style="color:red")  Delete     
                        td 
                            a(href="/product/api/updateProduct/"+ product._id , style="color:blue")  Update     

